{
  "name": "zhin-next",
  "version": "1.0.0",
  "description": "TypeScript机器人框架",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "workspaces": [
    "adapters/*",
    "packages/*",
    "plugins/*"
  ],
  "packageManager": "pnpm@9.0.2",
  "scripts": {
    "dev": "pnpm --filter test-bot dev",
    "start": "pnpm --filter test-bot start",
    "daemon": "pnpm --filter test-bot daemon",
    "exp:dep": "pnpm --filter dependency-example dev",
    "release": "pnpm changeset",
    "bump": "pnpm changeset version",
    "pub": "pnpm -r publish --access public --no-git-checks --registry https://registry.npmjs.org",
    "stop": "pnpm --filter test-bot stop",
    "init": "pnpm --filter test-bot initial && pnpm install",
    "prepare:logger": "pnpm --filter @zhin.js/logger build",
    "prepare:cli": "pnpm --filter @zhin.js/cli build",
    "prepare:console": "pnpm --filter @zhin.js/console build:node",
    "prepare:http": "pnpm --filter @zhin.js/http build",
    "prepare:types": "pnpm --filter @zhin.js/types build",
    "prepare": "pnpm run prepare:logger && pnpm run prepare:cli && pnpm run prepare:console && pnpm run prepare:types && pnpm run prepare:http && pnpm install",
    "build": "pnpm run prepare && pnpm -r build",
    "clean": "pnpm -r clean",
    "lint": "eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "link": "pnpm --filter @zhin.js/cli exec npm link",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "create": "node packages/create-zhin/lib/index.js",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "check:prod": "node scripts/check-production-config.js"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@types/node": "^24.10.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "vitepress": "^1.6.4",
    "vitest": "^1.6.1",
    "vue": "^3.5.23"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "cross-spawn": "^7.0.6",
    "fs-extra": "^11.3.2",
    "inquirer": "^12.10.0",
    "ora": "^8.2.0"
  }
}
