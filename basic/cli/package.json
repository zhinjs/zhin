{
  "name": "@zhin.js/cli",
  "version": "1.0.26",
  "description": "Command-line interface for Zhin.js bot framework",
  "type": "module",
  "main": "./lib/index.js",
  "bin": {
    "zhin": "./lib/cli.js"
  },
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rimraf lib"
  },
  "dependencies": {
    "@zhin.js/logger": "workspace:*",
    "commander": "^14.0.2",
