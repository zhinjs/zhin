{
  "name": "@zhin.js/satori",
  "version": "0.0.1",
  "type": "module",
  "description": "Enlightened library to convert JSDOM to SVG.",
  "module": "./dist/index.js",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "wasm": [
        "./dist/index.d.ts"
      ]
    }
  },
  "license": "MPL-2.0",
  "files": [
    "dist/**",
    "wasm.js"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./wasm": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.wasm.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.wasm.cjs"
      }
    }
  },
  "scripts": {
    "dev": "concurrently \"pnpm dev:default\" \"pnpm dev:wasm\"",
    "dev:default": "NODE_ENV=development tsup src/index.ts --watch",
    "dev:wasm": "WASM=1 NODE_ENV=development tsup src/index.ts --watch",

    "build": "NODE_ENV=production pnpm run build:default && pnpm run build:wasm",
    "build:default": "tsup",
    "build:wasm": "WASM=1 tsup",
    "test": "NODE_ENV=test vitest run",
    "test:ui": "NODE_ENV=test vitest --ui --coverage.enabled",
    "test-type": "tsc -p tsconfig.json --noEmit",
    "dev:test": "NODE_ENV=test vitest --update",
    "lint": "eslint . --ext .js,.ts --quiet --cache",
    "lint:fix": "pnpm lint --fix",
    "prettier-check": "prettier --check .",
    "prettier-fix": "prettier --write --list-different . --cache",
    "ci-check": "concurrently \"pnpm prettier-check\" \"pnpm test-type\" \"pnpm lint\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zhinjs/zhin.git",
    "directory": "packages/satori"
  },
  "keywords": [
    "HTML",
    "SVG",
    "converter",
    "renderer"
  ],
  "author": "Shu Ding <g@shud.in>",
  "bugs": {
    "url": "https://github.com/zhinjs/zhin/issues"
  },
  "homepage": "https://github.com/zhinjs/zhin#readme",
  "devDependencies": {
    "@types/jsdom": "^21.1.6",
    "@types/node": "^16",
    "@types/opentype.js": "^1.3.3",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "concurrently": "^7.3.0",
    "esbuild-plugin-replace": "^1.2.0",
    "eslint": "^8.25.0",
    "jest-image-snapshot": "^6.1.0",
    "jsdom": "^24.0.0",
    "prettier": "^2.7.1",
    "tsup": "^7.1.0",
    "turbo": "^1.6.3",
    "twrnc": "^3.4.0",
    "typescript": "^5",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "@resvg/resvg-js": "^2.1.0",
    "@shuding/opentype.js": "1.4.0-beta.0",
    "css-background-parser": "^0.1.0",
    "css-box-shadow": "1.0.0-3",
    "css-gradient-parser": "^0.0.16",
    "css-to-react-native": "^3.0.0",
    "emoji-regex-xs": "^2.0.1",
    "escape-html": "^1.0.3",
    "linebreak": "^1.1.0",
    "parse-css-color": "^0.2.1",
    "postcss-value-parser": "^4.2.0",
    "yoga-wasm-web": "^0.3.3"
  },
  "engines": {
    "node": ">=16"
  }
}
