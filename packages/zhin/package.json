{
  "name": "zhin.js",
  "version": "1.0.19",
  "description": "开箱即用的机器人框架 - 包含进程适配器、HTTP服务、Web控制台和SQLite数据库",
  "type": "module",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "development": "./src/index.ts",
      "import": "./lib/index.js"
    },
    "./jsx": {
      "types": "./lib/jsx.d.ts",
      "development": "./src/jsx.ts",
      "import": "./lib/jsx.js"
    },
    "./jsx-runtime": {
      "types": "./lib/jsx-runtime.d.ts",
      "development": "./src/jsx-runtime.ts",
      "import": "./lib/jsx-runtime.js"
    },
    "./setup": {
      "types": "./lib/setup.d.ts",
      "development": "./src/setup.ts",
      "import": "./lib/setup.js"
    },
    "./jsx-dev-runtime": {
      "types": "./lib/jsx-dev-runtime.d.ts",
      "development": "./src/jsx-dev-runtime.ts",
      "import": "./lib/jsx-dev-runtime.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf lib"
  },
  "dependencies": {
    "@zhin.js/core": "workspace:*",
    "@zhin.js/logger": "workspace:*",
    "@zhin.js/schema": "workspace:*",
    "yaml": "^2.3.4",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/node": "^24.3.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zhinjs/zhin.git",
    "directory": "packages/zhin"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
