{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ES2020",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "moduleResolution": "bundler",
        "module": "ESNext",
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "paths": {
            "@/*": ["src/*"]
        }
    }
}